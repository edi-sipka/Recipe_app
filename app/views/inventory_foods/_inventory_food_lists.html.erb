<div class="mt-2">
  <% if inventory.inventory_foods.empty? %>
    <h1 class="text-2xl font-bold text-center text-indigo-600">
      <%= render partial: "errors/404"%>
    </h1>
  <% else %>
    <table class="m-auto border border-slate-500">
      <thead>
        <tr>
          <th class="border border-slate-600 p-4"> Food </th>
          <th class="border border-slate-600 p-4"> Quantity </th>
          <th class="border border-slate-600 p-4"> Actions </th>
        </tr>
      </thead>
      <tbody>

        <% inventory.inventory_foods.each do |inventory_food| %>
          <tr>
            <%= render partial: "foods/food_lists", locals: {data: inventory_food.food, price: false, qty: inventory_food.quantity} %>
            <td class="border border-slate-600 p-4 text-xs text-indigo-600 hover:text-indigo-500" >
              <%= button_to "Remove", inventory_inventory_food_path(inventory.id, inventory_food.id) , method: :delete, class: "text-sm text-indigo-600 hover:text-indigo-500 ml-2" %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>
  <% end %>
</div>

